<UserControl x:Class="NetworkCheckers.MainMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:NetworkCheckers"
             mc:Ignorable="d">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel>
        <Button Content="Find Game" Background="{StaticResource Even}" Command="{Binding FindGameCommand}"></Button>
        <Button Content="Change Name" Background="{StaticResource Odd}" Command="{Binding ChangeNameCommand}"></Button>
        <Button Content="Server config" Background="{StaticResource Even}" Command="{Binding ConfigureCommand}"></Button>
    </StackPanel>
</UserControl>
